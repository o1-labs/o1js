{
  "name": "snarkyjs",
  "description": "JavaScript bindings for SnarkyJS",
  "version": "0.5.1",
  "license": "Apache-2.0",
  "type": "module",
  "main": "./dist/web/index.js",
  "exports": {
    "browser": "./dist/web/index.js",
    "node": {
      "import": "./dist/server/index.js",
      "require": "./dist/server/index.cjs"
    },
    "default": "./dist/web/index.js"
  },
  "types": "./dist/server/index.d.ts",
  "files": [
    "src/build",
    "dist",
    "src/lib",
    "src/**/*.d.ts"
  ],
  "bin": {
    "snarky-run": "src/build/run.mjs"
  },
  "engines": {
    "node": ">=16.4.0"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "dev": "npx tsc -p tsconfig.server.json",
    "make": "make -C ../../../.. snarkyjs",
    "build": "rm -rf dist/server && npx tsc -p tsconfig.server.json && cp -r src/node_bindings dist/server/_node_bindings && cp src/snarky.d.ts dist/server/snarky.d.ts",
    "build:node": "npm run build",
    "build:web": "node src/build/buildWeb.mjs",
    "serve:web": "cp src/chrome_bindings/server.py src/chrome_bindings/index.html dist/web && cd dist/web && python3 server.py",
    "prepublish:web": "NODE_ENV=production node src/build/buildWeb.mjs",
    "prepublish:node": "npm run build && NODE_ENV=production node src/build/buildNode.mjs",
    "prepublish:both": "npm run prepublish:web && npm run prepublish:node",
    "prepublishOnly": "npm run prepublish:web && npm run prepublish:node",
    "bootstrap": "npm run build && node src/build/extractJsooMethods.js && npm run build",
    "format": "prettier --write --ignore-unknown **/*",
    "test": "node --experimental-wasm-modules --experimental-modules --experimental-wasm-threads --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "clean": "rimraf ./dist",
    "test:integration": "./run-integration-tests.sh"
  },
  "author": "O(1) Labs",
  "devDependencies": {
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/jest": "^27.0.0",
    "@types/node": "^18.7.13",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "esbuild": "^0.13.13",
    "eslint": "^8.0.0",
    "expect": "^29.0.1",
    "fs-extra": "^10.0.0",
    "howslow": "^0.1.0",
    "jest": "^28.1.3",
    "minimist": "^1.2.5",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "typedoc": "^0.23.11",
    "typescript": "^4.8.2"
  },
  "dependencies": {
    "env": "^0.0.2",
    "isomorphic-fetch": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0"
  }
}
