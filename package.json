{
  "name": "@o1labs/snarkyjs",
  "description": "JavaScript bindings for SnarkyJS",
  "version": "0.1.10",
  "license": "Apache-2.0",
  "main": "./dist/web/index.js",
  "exports": {
    "browser": "./dist/web/index.js",
    "node": {
      "import": "./dist/server/index.mjs",
      "require": "./dist/server/index.js"
    },
    "default": "./dist/web/index.js"
  },
  "types": "./dist/server/index.d.ts",
  "files": [
    "src/build",
    "dist",
    "src/lib",
    "src/**/*.d.ts"
  ],
  "bin": {
    "snarky-run": "src/build/run.mjs"
  },
  "engines": {
    "node": ">=16.4.0"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "node src/build/buildNode.mjs",
    "build:server": "npm run build",
    "start:web": "./scripts/build-and-run-web.sh",
    "serve:web": "cd dist/web && python3 server.py",
    "exec": "./scripts/build-and-run-server.sh",
    "build:web": "node src/build/buildWeb.mjs",
    "prepublish:web": "NODE_ENV=production node src/build/buildWeb.mjs",
    "prepublish:server": "NODE_ENV=production node src/build/buildNode.mjs",
    "prepublish:both": "npm run prepublish:web && npm run prepublish:server",
    "prepublishOnly": "npm run prepublish:web && npm run prepublish:server",
    "format": "prettier --write --ignore-unknown **/*",
    "test": "node --experimental-wasm-modules --experimental-modules --experimental-wasm-threads --experimental-vm-modules ./node_modules/jest/bin/jest.js --silent",
    "clean": "rm -rf dist"
  },
  "author": "O(1) Labs",
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "esbuild": "^0.13.13",
    "eslint": "^8.0.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.0.6",
    "minimist": "^1.2.5",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "typedoc": "^0.22.9",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "env": "^0.0.2",
    "reflect-metadata": "^0.1.13",
    "tslib": "^2.3.0"
  }
}
