{
  "name": "@o1labs/snarkyjs",
  "description": "JavaScript bindings for SnarkyJS",
  "version": "0.1.2",
  "license": "Apache-2.0",
  "main": "./dist/web/index.js",
  "exports": {
    "browser": "./dist/web/index.js",
    "node": {
      "import": "./src/index.mjs",
      "require": "./dist/server/index.js"
    },
    "default": "./dist/web/index.js"
  },
  "types": "./src/index.d.ts",
  "files": [
    "dist",
    "src/index.mjs",
    "src/lib",
    "src/**/*.d.ts"
  ],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "type-check": "tsc --noEmit",
    "start:web": "./scripts/build-and-run-web-esbuild.sh",
    "serve:web": "cd dist/web && python3 server.py",
    "start:server": "./scripts/build-and-run-server.sh",
    "build:web": "node webpack/esbuild-web.mjs",
    "build:server": "node webpack/extractJsooMethods.js && webpack --config ./webpack/webpack.node.simple.js --stats-error-details",
    "prepublish:web": "NODE_ENV=production node webpack/esbuild-web.mjs",
    "prepublish:server": "webpack --config ./webpack/webpack.node.simple.js --stats-error-details",
    "prepublish:both": "npm run prepublish:web && npm run prepublish:server",
    "format": "prettier --write --ignore-unknown **/*",
    "test": "node --experimental-wasm-modules --experimental-modules --experimental-wasm-threads --experimental-vm-modules ./node_modules/jest/bin/jest.js --silent",
    "clean": "rm -rf dist"
  },
  "author": "O(1) Labs",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "@types/jest": "^27.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0-alpha.0",
    "copy-webpack-plugin": "^9.0.1",
    "esbuild": "^0.13.13",
    "eslint": "^8.0.0",
    "jest": "^27.0.6",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.4",
    "ts-loader": "^9.2.5",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "env": "^0.0.2",
    "reflect-metadata": "^0.1.13"
  }
}
